page::after{
    content: '';
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 2rpx;
    background-color: rgba(0, 0, 0, 0.07);
    z-index: 9999;
}
  image{
    width: 100%;height: 100%;
  }
