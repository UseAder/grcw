/* @import "../../../template/showToast.wxss"; */

page {
    height: 100%;
    width: 100%;
    background: #F2F4F7;
}

.mycenter {
    overflow-x: hidden;
}

.uesrinfo {
    width: 100px;
    height: 280rpx;
    background: transparent;
    position: absolute;
    overflow-x: hidden;
}

.container {
    background: #f4f4f4;
    height: auto;
    overflow: hidden;
    width: 100%;
}

.profile-info {
    width: 100%;
    height: 280rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    padding: 0 29rpx;
    background-color: #FACF89;
}

button::after {
    border-radius: 0;
    border: none;
}

.profile-info .avatar {
    height: 148rpx;
    width: 148rpx;
    border-radius: 50%;
}

.profile-info .info {
    display: flex;
    flex: 1;
    justify-content: center;
    flex-direction: column;
    height: 100%;
    align-content: center;
    padding-left: 31.25rpx;
}

.profile-info .name {
    display: block;
    height: 85rpx;
    line-height: 85rpx;
    color: #fff;
    font-size: 37.5rpx;
    margin-bottom: 10rpx;
}

.profile-info .level {
    display: block;
    height: 30rpx;
    line-height: 30rpx;
    margin-bottom: 10rpx;
    color: #7f7f7f;
    font-size: 30rpx;
}

.user-menu {
    width: 100%;
    height: auto;
    overflow: hidden;
}

.user-menu .item {
    width: 100%;
    height:100rpx;background: #fff;
}

.user-menu .item .a {
    background: #fff;

    display: flex;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.user-menu .item .a image {
  width:32rpx;
    margin-left: 39rpx;
}

.user-menu .item.no-border {
    border-right: 0;
}

.user-menu .item.item-bottom {
    border-bottom: none;
}

.user-menu .item .a {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

.user-menu .icon {
    margin: 0 auto;
    display: block;
    height: 52.803rpx;
    width: 52.803rpx;
    margin-bottom: 16rpx;
}

.user-menu .txt {
    display: block;
    color: #101010;margin-left: 18rpx;
}

.logout {
    margin-top: 50rpx;
    height: 101rpx;
    width: 100%;
    line-height: 101rpx;
    text-align: center;
    background: #fff;
    color: #333;
    font-size: 30rpx;
}



.contacts {
    width: 120rpx;
    opacity: 0;
    height: 100rpx;
    position: relative;
    float: left;
}

.contacts_container {
    position: absolute;
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
}

.company_logo {
    display: flex;
    height: 100%;
    flex-direction: row;
    margin-top: 70px;
    bottom: 40px;
    justify-content: center;
}

.company_logo image {
    width: 95px;
    height: 40px;
    margin: 0 auto;
}

.attr-pop {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 4;
}

.popup-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background-color: rgba(0,0,0,0.5);
    height: 100%;
    z-index: 5;
}

.popup-contents {
    position: fixed;
    margin: 0 auto;
    width: 311px;
    height: 283px;
    background-color: #fff;
    z-index: 6;
    overflow-x: hidden;
    top: 0px;
    left: 0px;
    right: 0px;
    margin-top: 80px;
    bottom: 0px;
    overflow-y: hidden;
}

.popup-contents .login {
    display: flex;
    flex-direction: column;
}

.popup-contents .login .login_logo {
    width: 57px;
    height: 42px;
    margin: 0 auto;
    margin-top: 18px;
}

.login_account {
    margin: 0 auto;
    width: 271px;
    height: 41px;
    border-bottom: 1px solid #B5B5B5;
    border-left: 1px solid #B5B5B5;
    border-right: 1px solid #B5B5B5;
    border-top: 1px solid #B5B5B5;
    line-height: 41px;
    display: flex;
    margin-top: 23px;
    flex-direction: row;
    align-items: center;
}

.pwd_account {
    margin: 0 auto;
    width: 271px;
    height: 41px;
    border-bottom: 1px solid #B5B5B5;
    border-left: 1px solid #B5B5B5;
    border-right: 1px solid #B5B5B5;
    border-top: 1px solid #B5B5B5;
    line-height: 41px;
    display: flex;
    margin-top: 15px;
    flex-direction: row;
    align-items: center;
}

.login_account input {
    margin-left: 10px;
    color: #333333;
}

.pwd_account input {
    margin-left: 10px;
    color: #333333;
}

.account_logo {
    width: 20px;
    height: 22px;
    margin-left: 5px;
}

.bt {
    width: 186px;
    height: 39px;
    background: #FF9900;
    margin: 0 auto;
    margin-top: 40px;
    color: white;
    font-size: 14px;
    text-align: center;
    align-content: center;
    line-height: 39px;
    border-radius: 3px;
}

.close_container {
    width: 100%;
    margin-top: 380px;
    align-content: center;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.close {
    width: 33px;
    height: 33px;
    left: 0px;
    top: 0px;
    right: 0px;
    bottom: 0px;
    z-index: 999;
    position: relative;
}