/* @import "../../../template/showToast.wxss"; */

page {
    height: 100%;
    width: 100%;
    background:#F2F4F7;
}

.mycenter {
    overflow-x: hidden;
}

.uesrinfo {
   width:100%;
height:280rpx;
background:transparent;
position:absolute;
overflow-x:hidden;
left:0;

}

.container {
    background: #f5f5f5;
    height: auto;
    overflow: hidden;
    width: 100%;
}

.profile-info {
    width: 100%;
    height: 280rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    padding: 0 29rpx;
    background-color: #FACF89;
}

button::after {
    border-radius: 0;
    border: none;
}

.profile-info .avatar {
    height: 148rpx;
    width: 148rpx;
    border-radius: 50%;
}

.profile-info .info {
    display: flex;
    flex: 1;
    justify-content: center;
    flex-direction: column;
    height: 100%;
    align-content: center;
    padding-left: 31.25rpx;
}

.profile-info .name {
    display: block;
    height: 85rpx;
    line-height: 85rpx;
    color: #fff;
    font-size: 37.5rpx;
}

.profile-info .level {
    display: block;
    height: 30rpx;
    line-height: 30rpx;
    margin-bottom: 10rpx;
    color: #B5B4B4;
    font-size: 30rpx;
}

.user-menu {
    width: 100%;
    height: auto;
    overflow: hidden;
}

.user-menu .item {
    width: 100%;
    height:100rpx;background: #fff;margin-bottom: 10rpx;
}

.user-menu .item .a {
    background: #fff;

    display: flex;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.user-menu .item .a image {
  width:32rpx;
    margin-left: 39rpx;
}

.user-menu .item.no-border {
    border-right: 0;
}

.user-menu .item.item-bottom {
    border-bottom: none;
}

.user-menu .item .a {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

.user-menu .icon {
    margin: 0 auto;
    display: block;
    height: 52.803rpx;
    width: 52.803rpx;
    margin-bottom: 16rpx;
}

.user-menu .txt {
    display: block;
    color: #101010;margin-left: 18rpx;
}

.logout {
    margin-top: 50rpx;
    height: 101rpx;
    width: 100%;
    line-height: 101rpx;
    text-align: center;
    background: #fff;
    color: #333;
    font-size: 30rpx;
}



.contacts {
    width: 120rpx;
    opacity: 0;
    padding: 15rpx 0;box-sizing:border-box;
    height: 100rpx; 
    position: relative;
    float: left;
}

.contacts_container {
    position: absolute;
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
}

.company_logo {
    display: flex;
    position: fixed;width:100%;
    flex-direction: row;
    bottom: 113rpx;
    justify-content: center;
}

.company_logo .zxun{
  overflow: hidden;
 width:300rpx;
height:60rpx;
display: flex;justify-content: center;align-items: center;
background:rgba(255,255,255,1);
text-align: center;
box-shadow:0px 5rpx 0px 0px rgba(0, 0, 0, 0.04);
border-radius:30rpx;
position: relative;
}
.zxun image{
width:39rpx;
height:37rpx;margin-right: 12rpx;
}
.zxun-contact-button{
  position: absolute;top: 0;right: 0;opacity: 0;
}