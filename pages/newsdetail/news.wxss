@import "../../lib/wxParse/wxParse.wxss";

page {
    padding-bottom: 50px;
    background: #fff;
}

.title {
    line-height: 30px;
    font-size: 18px;
    display: inline-block;
    width: 100%;
    padding: 10px;
    margin-top: 15px;
    box-sizing: border-box;
}

.info {
    line-height: 30px;
    font-size: 12px;
    color: #999;
    padding: 0 10px;
}

.info text {
    padding-right: 15px;
}

.detail {
    box-sizing: border-box;
    height: auto;
    margin:20rpx;

    overflow: hidden;
    padding-top: 15px;
    overflow-x: hidden;
    margin-bottom: 44px;
}

.detail .tips {
    padding-top: 20px;
}

.video video {
    width: 100%;
    height: 520rpx;
}