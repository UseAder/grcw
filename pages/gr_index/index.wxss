}

.notice {
  background: #fff;
  position: relative;
  padding-left: 76px;
  padding-right: 33px;
  margin: 0 12px;
  font-size: 13px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  background: #fff;
  height: 85rpx;
  line-height: 85rpx;
  border: 2rpx solid rgba(227, 231, 243, 1);
  border-radius: 10rpx;
}

.notice .tit {
  position: absolute;
  left: 12px;
  top: 0;
  color: #333;
}

.cheap {
  color: #fff;
  padding: 0 11rpx;
  font-size: 24rpx;
  height: 35rpx;
