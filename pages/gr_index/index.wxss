}

.publish block {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.publish {
  margin: 0 28rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.publish .item {
  justify-content: center;
  align-items: center;
  width: 25%;
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
}

.publish .item text {
  margin: 12rpx 0;
  line-height: 1;
}

.list-info .item .h5 {
  padding-right: 0;
}

.list-info .item text {
  padding-right: 0;
}

.menu {
