/* pages/data/index/index.wxss */

.container,
page {
    background-color: #F2F4F7;
    height: 100vh;
}

.top-switch-top-back {
    background-color: #1B88EE;
    width: 100vw;
    height: 120rpx;
}

.top-switcher {
    margin: 0 18rpx;
    display: flex;
    font-size: 28rpx;
    justify-content: space-around;
    align-items: center;
    background-color: white;
    height: 102rpx;
    margin-top: -51rpx;
    border-radius: 18rpx;
    position: relative;
}

.top-switcher-title.active {
    color: #1B88EE;
}

.bottom-line {
    background-color: #ffffff;
    width: 32rpx;
    height: 4rpx;
    left: 0;
    bottom: 8rpx;
    margin-top: 20rpx;
}

.top-switcher-title.active>.bottom-line {
    background-color: #1B88EE;
}

.top-switcher-title {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx 10rpx 0 10rpx;
}

.data-chart {
    background-color: #ffffff;
    border-radius: 18rpx;
    margin: 32rpx 28rpx 38rpx 28rpx;
    padding: 26rpx 32rpx;
}

.chart {
    margin-top: 28rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-right: 46rpx;
}

.pie {
    width: 316rpx;
    height: 316rpx;
}

.data-chart-head {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: #F1F1F1 2rpx solid;
    padding-bottom: 22rpx;
}

.date-picker {
    display: flex;
    align-items: center;
    height: 50rpx;
}

.date-picker>.date {
    margin-right: 4rpx;
}

.data-chart-head .title,
.data-detail>.title {
    font-size: 34rpx;
    color: #272D36;
    font-weight: bold;
}

.data-chart-head .unit {
    font-size: 22rpx;
    color: #A7B0BE;
    margin-left: 8rpx;
}

.data-chart-head .date {
    color: #272D36;
    font-size: 26rpx;
}

.mark {
    display: flex;
    flex-direction: column;
    max-width: 260rpx;
}

.mark-li {
    color: #272D36;
    font-size: 26rpx;
    padding: 18rpx 0;
    display: flex;
    align-items: center;
}

.mark-dot {
    margin-right: 18rpx;
    width: 14rpx;
    height: 14rpx;
    border-radius: 7rpx;
}

.mark-li.bottom {
    border-bottom: #F1F1F1 1px solid;
}

.fee-count>.total-fee {
    color: #1B88EE;
    margin: 36rpx 0 54rpx 0;
    font-size: 72rpx;
    font-weight: bold;
    text-align: center;
}

.other-fee {
    display: flex;
    justify-content: space-between;
}

.other-fee>.left {
    text-align: left;
}

.other-fee>.right {
    text-align: right;
}

.other-fee>.sepline {
    background-color: #E9E8E8;
    width: 2rpx;
    height: 65rpx;
    align-self: center;
}

.other-fee .fee-detail {
    color: #304057;
    font-size: 29rpx;
}

.other-fee .fee-type {
    color: #A7B0BE;
    font-size: 25rpx;
    margin-top: 20rpx;
}

.data-detail {
    margin: 0 28rpx;
}

.data-detail>.detail-li {
    background-color: #ffffff;
    border-radius: 18rpx;
    padding: 28rpx 36rpx;
    color: #272D36;
    font-size: 28rpx;
    margin: 18rpx 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.income>.date,
.debt>.date {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
    width: 207rpx;
    height: 62rpx;
    border-radius: 31rpx;
    background-color: white;
    padding: 0 34rpx;
    font-size: 25rpx;
    margin-top: 36rpx;
}

.income>.date>image,
.debt>.date>image {
    width: 13rpx;
    height: 7rpx;
    margin-left: 2rpx;
}

.debt>.section {
    padding: 36rpx 38rpx;
    background-color: white;
    border-top-left-radius: 18rpx;
    border-top-right-radius: 18rpx;
    margin: 36rpx 29rpx 0 29rpx;
}

.debt>.section-detail {
    padding: 36rpx 38rpx;
    margin: 0 29rpx;
    background-color: white;
}

.debt>.sepline {
    margin: 0 30rpx;
    height: 2rpx;
    background-color: white;
}

.debt>.sepline>view {
    margin: 0 33rpx;
    background-color: #F1F1F1;
    height: 100%;
}

.debt>.section.bottom-radius,
.debt>.section-detail.bottom-radius {
    border-bottom-left-radius: 18rpx;
    border-bottom-right-radius: 18rpx;
}

.debt>.section-sepline {
    height: 9rpx;
    margin: 0 29rpx;
    background-color: white;
    overflow: hidden;
    display: flex;
}

.debt>.section-sepline>image {
    width: 18rpx;
    height: 9rpx;
}

.betop>.title,
.betop>.fee,
.betop>.type,
.debt>.section-detail>.title,
.debt>.section-detail>.fee,
.debt>.section-detail>.type,
.debt>.section>.title,
.debt>.section>.fee,
.debt>.section>.type {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.betop>.title>.left,
.debt>.section-detail>.title>.left,
.debt>.section>.title>.left {
    font-weight: bold;
    font-size: 31rpx;
    color: #0D141E;
}

.betop>.title>.right,
.debt>.section>.title>.right {
    width: 27rpx;
    height: 14rpx;
}

.betop>.title>.right.rotate-180,
.debt>.section>.title>.right.rotate-180 {
    transform: rotate(180deg);
}

.betop>.fee>.left,
.betop>.fee>.right,
.debt>.section-detail>.fee>.left,
.debt>.section-detail>.fee>.right,
.debt>.section>.fee>.left,
.debt>.section>.fee>.right {
    font-size: 25rpx;
    color: #304057;
    margin-top: 16rpx;
}

.betop>.type>.left,
.betop>.type>.right,
.debt>.section-detail>.type>.left,
.debt>.section-detail>.type>.right,
.debt>.section>.type>.left,
.debt>.section>.type>.right {
    font-size: 25rpx;
    color: #A7B0BE;
    margin-top: 4rpx;
}

.betop {
    background-color: white;
    left: 29rpx;
    width: 616rpx;
    position: absolute;
    top: 0;
    padding: 36rpx 38rpx;
}

.betop-sepline {
    height: 9rpx;
    background-color: white;
    overflow: hidden;
    display: flex;
    position: absolute;
    width: 692rpx;
    bottom: 0;
    left: 0;
}

.betop-sepline>image {
    width: 18rpx;
    height: 9rpx;
}

.income-back {
    margin: 36rpx 25rpx 72rpx 33rpx;
    border-radius: 18rpx;
    background-color: white;
    padding-top: 1rpx;
    padding-bottom: 36rpx;
}

.income-title>.title>.left,
.income-title>.title>.right {
    font-size: 31rpx;
    color: #0D141E;
    font-weight: bold;
}

.income-title>.note>.left,
.income-title>.note>.right {
    font-size: 25rpx;
    color: #304057;
    display: flex;
    justify-content: space-between;
    font-weight: normal;
}

.income-canshow>.row>.left {
    font-size: 29rpx;
    color: #304057;
    display: flex;
    align-items: center;
}

.income-canshow>.row>.left>image {
    width: 16rpx;
    height: 14rpx;
    margin-right: 12rpx;
}

.income-canshow>.row>.right {
    font-size: 25rpx;
    color: #304057;
}

.row {
    display: flex;
    justify-content: space-between;
    margin: 36rpx 40rpx 0 33rpx;
}

.border-bottom {
    padding-bottom: 33rpx;
    border-bottom: #F2F4F7 1rpx solid;
}