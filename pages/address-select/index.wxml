<view class='address-management {{addressList.length < 1 && page > 1 ? "fff":""}}'>
   
   <view class='line'><image src='/images/line.jpg' wx:if="{{addressList.length}}"></image></view>
   <radio-group class="radio-group" bindchange="radioChange" wx:if="{{addressList.length}}">
      <view class='item' wx:for="{{addressList}}" data-index="{{index}}" wx:key>
          <view class='address'  data-id="{{item.id}}" bindtap='goOrder'>
            <view class='consignee'>收货人：{{item.ad_name}}<text class='phone'>{{item.ad_phone}}</text></view>
            <view>收货地址：{{item.ad_city[0]}}{{item.ad_city[1]}}{{item.ad_city[2]}}{{item.ad_address}}</view>
          </view>
          <view class='operation acea-row row-between-wrapper'>
             <radio class="radio" value="{{index}}" checked="{{item.is_default ? true : false}}">
                <text>设为默认</text>
             </radio>
             <view class='acea-row row-middle'>
               <view data-index="{{index}}" bindtap='editAddress'><text class='iconfont icon-bianji'></text>编辑</view>
               <view data-index="{{index}}" bindtap='delAddress'><text class='iconfont icon-shan_chu'></text>删除</view>
             </view>
          </view>
      </view>
   </radio-group>
   <view class='noCommodity' wx:if="{{addressList.length < 1 && page > 1}}">
      <view class='pictrue'><image src='/images/noAddress.png'></image></view>
   </view>
   <!-- <view style='height:120rpx;'></view> -->

    <view class="empty-view" wx:if="{{addressList.length<=0}}">
        <image class="icon" src="/images/noAddress-26d570cefa.png"></image>
        <text class="text">收货地址在哪里</text>
    </view>
<view class='footer acea-row row-between-wrapper'>
      <view class='but'  bindtap='addAddress'><text class='iconfont icon-jia'></text> 新建地址</view>
   </view>
</view>